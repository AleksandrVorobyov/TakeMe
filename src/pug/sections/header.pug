section.header 
    .header__form-wrap 
        .container 
            .header__form-col
                h1.header__form-title Find Your Dream Vacation Location
                h4.header__form-subtitle Search hundreds of locations from around the world and find your perfect vacation location.
                form.header__form
                    input(type="search", name="" class='header__form-search' placeholder='Country or ZIP code')
                    .header__form-dropdown-block
                        input(type="button" id='form-dropdown-transport' title='Transport'  name="Transport-name" class='header__form-dropdown' value='Transportation')
                        <svg xmlns="http://www.w3.org/2000/svg" width="10" height="6" viewBox="0 0 10 6"><path id="arrow_icn" class="cls-1" d="M751,570l5-3v-2.875l-5,3.019L746,564v3l5,3h0Z" transform="translate(-746 -564)"/></svg>
                        .header__form-dropdown-items
                            input(type="button", name="Transport" class='header__form-dropdown' value='Train')
                            input(type="button", name="Transport" class='header__form-dropdown' value='Plane')
                            input(type="button", name="Transport" class='header__form-dropdown' value='Bus')
                            input(type="button", name="Transport" class='header__form-dropdown' value='Ship')
                    .header__form-quantity-block
                        button.header__form-quantity-btn#btn-quantity-plus(type='button') +
                        input#input-quantity(type="number", name="number-of-people" class='header__form-number' placeholder='Number of people' value='' min='0' max='12' title="quantity" size="2")
                        button.header__form-quantity-btn#btn-quantity-minus(type='button') -
                    .header__form-submit-block
                        +button('Search')
    .header__carousel-wrap
        .header__carousel.owl-carousel.owl-theme 
            .header__carousel-item
                img(src="./img/header-carousel/01.jpg", alt="01.jpg")
            .header__carousel-item
                img(src="./img/header-carousel/02.jpg", alt="02.jpg")